.bloc
  .content.call
    = simple_form_for([@call.survey.client, @call.survey, @call], :html => {:novalidate => true}) do |f|
      = f.error_notification
      = f.hidden_field :survey_id, :value => @call.survey.id
      - answers_for(f).each do |section_title, answers|
        %ol
          %li
            %h1= section_title
          %ol
            - answers.each do |a|
              %li.answer= a
      = f.button :submit
