.bloc
  .content
    %ol
      - @call.answers_by_section.each do |section|
        %li
          %h2= section[:section]
          %ol
            - section[:answers].each do |a|
              %li
                %h3= a.question.title
                %p
                  - case a.question.typ
                  - when "open"
                    = a.body
                  - when "choices"
                    - a.question.choices.each do |c|
                      - if c == a.choice
                        %strong= c.title
                      - else
                        %span= c.title
              