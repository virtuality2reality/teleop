%h1 Teleop - Login
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  = f.input :email
  = f.input :password
  - if devise_mapping.rememberable?
    = f.input :remember_me, :as => :boolean, :wrapper_class => "checkbox"
  .submit
    = f.button :submit, "Login"
